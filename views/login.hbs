{{#if message}}
<div id="errormsg">
  <h1>Error {{status}}</h1>
  <p>{{message}}</p>
</div>
<br>
{{/if}}
 
 <div id="form">
 <h1>Log in</h1>
        <form action="/check_hash" method="POST" id="form">
            {{#if error}}
            <label class="errorlabel">{{{error}}}</label><br><br>
            {{/if}}
            <label for="username">Username:</label>
            <input type="text" id="username" name="username">
            <br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password">
            <br>

            <input type="submit" value="Log In">
        </form>
</div>